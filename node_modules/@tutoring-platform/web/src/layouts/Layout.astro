---
import AuthButton from '../components/AuthButton';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="ko">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
  </head>
  <body>
    <header>
      <nav>
        <AuthButton client:load />
      </nav>
    </header>
    <main>
      <slot />
    </main>
  </body>
</html> 